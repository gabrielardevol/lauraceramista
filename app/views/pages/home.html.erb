<script>
body = document.querySelector("body")
backDrop = document.querySelectorAll(".backdrop")
function viewBackDrop() {
  body.style.overflowY = "hidden";
  for (var i = 0; i < backDrop.length; i++) {
    backDrop[i].style.display = "block";
    backDrop[i].style.top = window.scrollY + "px";
}
}

projectButtons = document.querySelectorAll(".project-button")
for (var i = 0; i < projectButtons.length; i++) {
  projectButtons[i].addEventListener('click', viewBackDrop)

}
</script>

<script>
body = document.querySelector("body")
backDrop = document.querySelectorAll(".backdrop")
backgroundBackdrop = document.querySelector("#backdrop-background")
function hydeBackDrop() {
  body.style.overflowY = "scroll";
  for (var i = 0; i < backDrop.length; i++) {
    backDrop[i].style.display = "none";
}
}
backgroundBackdrop.addEventListener('click', hydeBackDrop)

</script>
